{
    "name": "express-typescript-template",
    "version": "1.0.0",
    "description": "Express.js TypeScript template with health endpoint",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "db:create": "ts-node src/scripts/create-tables.ts",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "test": "jest"
    },
    "keywords": [
        "express",
        "typescript",
        "nodejs",
        "api"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "morgan": "^1.10.0",
        "pg": "^8.11.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.17"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/morgan": "^1.9.4",
        "@types/node": "^20.4.0",
        "@types/pg": "^8.10.2",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.44.0",
        "jest": "^29.6.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.1.6"
    }
}
